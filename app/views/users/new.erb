
<!DOCTYPE html>

<head>
    <title>Signup for Fwitter</title>
</head>


    <body>
        

    <h1> Sign up for an account.</h1>

    <% if session[:temp_errors] %>
        <% session[:temp_errors].each do |msg| %>
            <p style="color: red;"><%= msg %></p>
        <% end %>
        <% session[:temp_errors] = nil %>
    <% end %>




        <form method="post" action="/signup">

            <p><label for="username">Username: 
            <input name="username" id="username" type="text" value="<%= @user ? @user.username : ""%>"/>
            </label></p>

            <p><label for="email">Email:
            <input name="email" id="email" type="text" value="<%= @user ? @user.email : ""%> "/>
            </label></p>

            <p><label for="password">Password: 
            <input name="password" id="password" type="password">
            </label></p>

            <input type="submit">
        </form>
    </body>
</html>